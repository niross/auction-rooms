{
  "extends": "airbnb",
  "env": {
    "mocha": true,
    "jquery": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "chai": true,
    "expect": true,
    "sinon": true,
    "analytics": true,
    "refRTCID": true,
    "decodeQuerystring": true,
    "google": true,
    "Intercom": true,
    "document": true,
    "twttr": true,
    "window": true,
    "gapi": true,
    "FB": true,
    "FileReader": true,
    "FormData": true,
    "fetch": true
  },
  "rules": {
    "semi": 2,
    "no-return-assign": 0,
    "react/jsx-no-bind": 0,
    "no-console": "error",
    "comma-dangle": [2, "never"],
    "brace-style": [2, "stroustrup", { "allowSingleLine": true }],
    "new-cap": [2, { "capIsNewExceptions": [
      "List", "Map", "DateField", "IntegerField", "ChoiceField", "CharField",
      "DecimalField"
    ]}],
    "react/forbid-prop-types": ["error", { forbid: ["any"] }]
  }
}
